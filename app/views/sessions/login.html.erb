<div class="login-header row">
    <div class="col-sm-6 col-xs-12">
        <h3>Existing User</h3>
    </div>
    <div class="col-sm-6 hidden-xs">
        <h3>Create Account</h3>
    </div>
</div>
<div class="login-content row">
    <div id="login-panel" class="form-panel col-sm-6 col-xs-12">
        <%= form_tag(:action => 'login_attempt') do %>
            <div class="form-group-email form-group">
                <label for="field-login-email" class="field-label">
                    <span class="glyphicon glyphicon-envelope"></span>
                    Email Address
                </label>
                <input id="field-login-email" class="form-control" name="email" type="email" placeholder="Email"></input>
            </div>
            <div class="form-group-password form-group">
                <label for="field-login-password" class="field-label">
                    <span class="glyphicon glyphicon-asterisk"></span>
                    Password
                </label>
                <input id="field-login-password" class="form-control" name="password" type="password" placeholder="Password"></input>
            </div>
            <button class="btn-login btn btn-default">Login</button>
            <div class="checkbox-remember-me checkbox">
                <label>
                    <input name="remember_me" type="checkbox">Remember me</input>
                </label>
            </div>
        <% end %>
    </div>
    <div id="signup-panel" class="form-panel col-sm-6 col-xs-12">
        <form role="form" action="/signup" method="get">
            <button class="btn-signup btn btn-default">Sign Up</button>
        </form>
    </div>
    <div class="panel-divider absolute-center hidden-xs">
        <div class="vertical-line"></div>
        <span class="or-text no-select">OR</span>
    </div>
</div>