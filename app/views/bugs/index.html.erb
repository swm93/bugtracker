<% if !@bugs.empty? %>
    <div id="bug-sidebar-container" class="content-area">
        <div class="sidebar no-select">
            <div class="sidebar-grouping">
                <h4><span class="glyphicon glyphicon-tasks"></span>Status</h4>
                <ul class="list-unstyled">
                    <li>
                        <input id="filter-status-assigned" type="checkbox" />
                        <label for="filter-status-assigned">Assigned</label>
                    </li>
                    <li>
                        <input id="filter-status-investigate" type="checkbox" />
                        <label for="filter-status-investigate">Investigate</label>
                    </li>
                    <li>
                        <input id="filter-status-resolved" type="checkbox" />
                        <label for="filter-status-resolved">Resolved</label>
                    </li>
                </ul>
            </div>
            <div class="sidebar-grouping-divider"></div>
            <div class="sidebar-grouping">
                <h4><span class="glyphicon glyphicon-fire"></span>Priority</h4>
                <ul class="list-unstyled">
                    <li>
                        <input id="filter-priority-high" type="checkbox" />
                        <label for="filter-priority-high">High</label>
                    </li>
                    <li>
                        <input id="filter-priority-normal" type="checkbox" />
                        <label for="filter-priority-normal">Normal</label>
                    </li>
                    <li>
                        <input id="filter-priority-low" type="checkbox" />
                        <label for="filter-priority-low">Low</label>
                    </li>
                </ul>
            </div>
            <div class="sidebar-grouping-divider"></div>
            <div class="sidebar-grouping">
                <h4><span class="glyphicon glyphicon-user"></span>Assignee</h4>
                <ul class="list-unstyled">
                    <li>
                        <input id="filter-assignee-scott" type="checkbox" />
                        <label for="filter-assignee-scott">Scott</label>
                    </li>
                    <li>
                        <input id="filter-assignee-rick" type="checkbox" />
                        <label for="filter-assignee-rick">Rick</label>
                    </li>
                    <li>
                        <input id="filter-assignee-newman" type="checkbox" />
                        <label for="filter-assignee-newman">Newman</label>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="bug-list-container" class="padded-column">
        <div class="table-container content-area">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Summary</th>
                        <th>Assignee</th>
                        <th>Group</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @bugs.each do |bug| %>
                        <tr class="bug-row" onclick="location.href='<%= project_bug_path(:id => bug) %>'">
                            <td class="cell-bug-id"><%= bug.id %></td>
                            <td class="cell-bug-summary"><%= bug.summary %></td>
                            <td class="cell-bug-assignee"><%# bug.assignee %></td>
                            <td class="cell-bug-group"><%# bug.group %></td>
                            <td class="cell-bug-comment fit-width clickable"><span class="glyphicon glyphicon-comment"></span></td>
                            <td class="cell-bug-close fit-width clickable"><span class="glyphicon glyphicon-ok-circle"></span></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
<% else %>
    <div class="col-sm-1"></div>
    <div class="col-sm-10 col-xs-12">
        <div class="container-no-bugs jumbotron text-center">
            <p class="msg-no-bugs">You haven't added any bugs yet. Add one now?</p>
            <a class="btn-create-bug btn btn-default" href="<%= new_project_bug_path %>">Create a Bug</a>
        </div>
    </div>
    <div class="col-sm-1"></div>
<% end %>